{% extends 'base_admin.html.twig' %}

{% block title %}
{% if operation =='edit' %}
Edit category
{% else %}
New category
{% endif %}
{% endblock %}

{% block body %}
<div class="h-[calc(100vh-80px)] flex items-center justify-center">

	<div class=" shadow-xl border p-5 h-64 w-1/2 m-auto flex flex-col items-center justify-center gap-5">
		{% if operation == 'new' %}
			<h1 class="text-2xl font-bold my-3 text-center">Ajouter une nouvelle catégorie</h1>
		{% else %}
		<h1 class="text-2xl font-bold my-3 text-center">Éditer une catégorie</h1>
		{% endif %}
		
		{{ form_start(formulaire) }}
		<div class="flex gap-3 justify-center">
			{{ form_widget(formulaire) }}
			<button type="submit" class="btn btn-success text-white">Sauvegarder</button>
			<a href="{{path('app_category')}}" class="btn btn-error text-white">Annuler</a>
		</div>
		{{ form_end(formulaire) }}
	</div>
</div>


{% endblock %}
