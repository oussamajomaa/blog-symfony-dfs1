{% extends 'base_admin.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="m-auto w-1/2">

    <h1 class="text-3xl font-bold">Liste des catégories</h1>
    <div class="m-auto mb-3 flex justify-end">
        <a class="btn btn-primary btn-sm" href="{{path('app_category_new')}}">+</a>
    </div>
    <table class="table">
        <thead>
            <tr class="text-xl font-bold">
                <td>Nom de catégory</td>
                <td class="text-right">Actions</td>
            </tr>
            <tbody>
                {% for category in categories %}
                {# <div class="flex gap-6  hover:bg-slate-100 w-1/2 m-auto justify-between p-2 rounde"> #}
                    {# <h2 class="w-1/2">{{category.name}} </h2> #}
                    <tr class="hover:bg-slate-200">
                        <td>{{category.name}}</td>
                    <td class="flex gap-6 justify-end">
                        <a href="{{path('app_category_new',{'id':category.id})}}" ><i class="fa-solid fa-edit text-green-500"></i></a>        
                        <a href=""><i class="fa-solid fa-trash text-red-500"></i></a>
                    </td>
                </tr>
    
                {# </div> #}
                {% endfor %}
            </tbody>
        </thead>
    </table>
</div>

{% endblock %}