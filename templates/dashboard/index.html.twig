{% extends "base_admin.html.twig" %}
{% block title %}Dashboard{% endblock %}
{% block body %}
<h1 class=" text-3xl font-bold mb-2">Liste des articles</h1>
<table class="table">
    <thead>
        <tr class=" font-bold">
            <td>TITLE</td>
            <td>CONTENT</td>
            <td>Date</td>
            <td>Category</td>
            <td>ACTIONS</td>
        </tr>
    <tbody>
        {% for post in posts %}
        <tr>
            <td>{{post.title}}</td>
            <td>{{post.content|slice(0,100)}} ...</td>
            <td>{{post.createdAT|date('d M Y')}}</td>
            <td>{{post.category}}</td>
            <td class="flex gap-3">

                <a href="{{path('app_post_edit', {'id':post.id})}}"><i class="text-xl fa-solid fa-eye "></i></a>
                <a href="{{path('app_post_edit', {'id':post.id})}}"><i
                        class="text-xl fa-solid fa-edit text-green-500"></i></a>
                <a href="{{path('app_post_show', {'id':post.id})}}"><i
                        class="text-xl fa-solid fa-trash text-red-500"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
    </thead>
</table>
{% endblock %}