{% extends "base.html.twig" %}
{% block title %}Edit post{% endblock %}
{% block body %}
<div class="flex flex-col gap-4 w-1/2 m-auto">
    {{form_start(form)}}
    <div class="mb-4">
        {% if post.image %}
            <div class="mb-2">
                <img src="{{ post.image starts with 'http' ? post.image : asset('uploads/' ~ post.image) }}" alt="{{ post.title }}" class="w-32 h-32 object-cover">
            </div>
        {% endif %}
    </div>
    <div class="">
        {{form_widget(form)}}
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
    {{form_end(form)}}
    
</div>

{% endblock %}